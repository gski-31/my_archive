<% include ../partials/header %>
<div class="container">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Campground Name:</label>
                <input type="text" class="form-control" id="name" name="campground[name]" placeholder="Enter Campground Name">
            </div>
            <div class="form-group">
                <label for="image">Image URL:</label>
                <input type="text" class="form-control" id="image" name="campground[image]" placeholder="Add a image URL">
            </div>
            <div class="form-group">
                <label for="location">Campground Location:</label>
                <input type="text" class="form-control" id="location" name="campground[location]" placeholder="Enter City, State">
            </div>
            <div class="form-group">
                <label for="description">Campground Description:</label>
                <textarea class="form-control" id="description" name="campground[description]"rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>
<% include ../partials/footer %>