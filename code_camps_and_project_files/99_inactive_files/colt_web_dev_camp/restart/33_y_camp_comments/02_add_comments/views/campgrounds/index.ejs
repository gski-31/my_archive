<% include ../partials/header %>
<div class="container">
    <div class="row">
        <% campgrounds.forEach((campground)=>{ %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.image %>"
                        class="card-img-top img-fluid"
                        alt="<%= campground.name %>"></a>
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <p class="card-text"><%= campground.description.substring(0,50) %>...</p>
                    <p class="card-text"><em><%= campground.location %></em></p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>

