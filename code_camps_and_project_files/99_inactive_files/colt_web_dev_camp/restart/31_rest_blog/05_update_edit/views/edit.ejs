<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form action='/blogs/<%= blogs._id %>?_method=PUT' method='POST' class="ui form">
        <div class="field">
            <label>Title</label><br />
            <input type="text" name="title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label><br />
            <input type="text" name="image" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Text Area</label><br />
            <textarea name="body"> <%= blog.body %> </textarea>
        </div>
        <button>Submit</button>
    </form>
</div>

<% include partials/footer %>