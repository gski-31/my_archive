<% include partials/header %>
<h2><%= character.name %></h2>

<div class="row">
    <div class="card">
        <img class="card-img-top" src="<%= character.image %>" alt="<%= character.name %>" style="max-width: 300px;">
        <div class="card-body">
            <small class="text-align-right"><%= character.date.toDateString() %></small>
            <p class="card-text"><%= character.description %></p>
            <a href="/" class="btn btn-primary">Go Back</a>
            <a href="/characters/<%= character._id %>/edit" class="btn btn-success">Edit Me</a>
            <form action="/characters/<%= character._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete Me</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>