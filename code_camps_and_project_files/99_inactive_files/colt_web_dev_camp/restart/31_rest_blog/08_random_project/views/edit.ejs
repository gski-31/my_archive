<% include partials/header %>
<h1>Edit <%= character.name %></h1>

<div class="container">

    <form action='/characters/<%= character._id %>?_method=PUT' method='POST'>
        <div class="form-group">
            <label for="name">Edit Character Name</label>
            <input type="text" class="form-control" id="name" name="character[name]" value="<%= character.name %>">
        </div>
        <div class="form-group">
            <label for="image">Edit Image Url</label>
            <input type="text" class="form-control" id="image" name="character[image]" value="<%= character.image %>">
        </div>
        <div class="form-group">
            <label for="description">Edit Character Description</label>
            <textarea class="form-control" id="description" name="character[description]" rows="3"><%= character.description %></textarea>
        </div>
        <button type="submit" class="btn btn-danger">Submit</button>
    </form>



</div>


<% include partials/footer %>