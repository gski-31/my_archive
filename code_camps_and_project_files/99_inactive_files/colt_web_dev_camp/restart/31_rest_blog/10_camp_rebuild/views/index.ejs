<% include partials/header %>
<div class="container">
    <div class="row">
        <% camps.forEach((camp)=>{ %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img src="<%= camp.image %>" class="card-img-top" alt="<%= camp.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.name %></h5>
                    <p class="card-text"><%= camp.description.substring(0,50) %>...</p>
                    <p class="card-text"><em><%= camp.location %></em></p>
                    <a href="/camps/<%= camp._id %>" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<% include partials/footer %>

