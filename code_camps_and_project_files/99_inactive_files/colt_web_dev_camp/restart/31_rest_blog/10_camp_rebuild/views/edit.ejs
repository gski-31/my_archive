<% include partials/header %>
<div class="container">
        <h2>Edit <% camp.name %></h2>
        <form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Edit Camp Name:</label>
                <input type="text" class="form-control" id="name" name="camp[name]" value="<%= camp.name %>">
            </div>
            <div class="form-group">
                <label for="image">Edit Image URL:</label>
                <input type="text" class="form-control" id="image" name="camp[image]" value="<%= camp.image %>">
            </div>
            <div class="form-group">
                <label for="location">Edit Camp Location:</label>
                <input type="text" class="form-control" id="location" name="camp[location]" value="<%= camp.location %>">
            </div>
            <div class="form-group">
                <label for="description">Edit Camp Description:</label>
                <textarea class="form-control" id="description" name="camp[description]"rows="5"><%= camp.description %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>
<% include partials/footer %>