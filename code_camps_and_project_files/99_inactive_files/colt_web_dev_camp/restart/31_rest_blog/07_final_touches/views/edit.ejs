<% include partials/header %>
<div class="container">

<form action='/blogs/<%= blog._id %>?_method=PUT' method='POST'>
    <div class="form-group">
        <label for="name">Edit Title</label>
        <input type="text" class="form-control" id="title" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="form-group">
        <label for="image">Edit Image URL</label>
        <input type="text" class="form-control" id="image" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="form-group">
        <label for="body">Edit Content</label>
        <textarea class="form-control" id="body" name="blog[body]" rows="5"><%= blog.body %></textarea>
    </div>
    <button type="submit" class="btn btn-danger">Save it</button>
</form>

</div>

<% include partials/footer %>