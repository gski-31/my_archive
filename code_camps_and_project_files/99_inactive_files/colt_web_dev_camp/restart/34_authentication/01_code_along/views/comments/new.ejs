<% include ../partials/header %>
<div class="container">
        <h4>Add a comment for <%= campground.name %></h4>
        <form action="/campgrounds/<%= campground._id %>/comments " method="POST">
            <div class="form-group">
                <label for="text">Add Comment:</label>
                <textarea class="form-control" id="text" name="comment[text]"rows="4"></textarea>
            </div>
            <div class="form-group">
                <label for="author">Your Name:</label>
                <input type="text" class="form-control" id="author" name="comment[author]" placeholder="Your Name">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>
<% include ../partials/footer %>